generator client {
  provider        = "prisma-client-js"
  previewFeatures = ["driverAdapters"]
}

datasource db {
  provider     = "mysql"
  url          = env("DATABASE_URL")
  relationMode = "prisma"
}

model User {
  id            Int      @id @default(autoincrement())
  clerkId       String   @unique
  firstName     String?
  lastName      String?
  email         String?  @unique
  emailVerified Boolean?
  profileId     String?
}

model Profile {
  id            Int          @id @default(autoincrement())
  clerkId       String       @unique
  firstName     String
  lastName      String
  school        String
  program       String
  year          Int
  gpa           Float
  phone         String
  country       String
  streetAddress String
  city          String
  stateProvince String
  zipPostalCode String
  about         String
  applications Applicant[]
  experiences   Experience[]
}

model Event {
  id               Int         @id @default(autoincrement())
  title            String
  theme            String
  description      String
  shortDescription String
  startDate DateTime
  endDate DateTime
  tags             Tag[] @relation("EventTag", references: [id])
  companies        Company[]  @relation("EventCompany", references: [id])
  applicants       Applicant[]
}

model Applicant {
  id          Int     @id @default(autoincrement())
  eventId     Int
  profileId Int @unique
  profile Profile @relation(fields: [profileId], references: [id])
  submissions String?
  event       Event   @relation(fields: [eventId], references: [id])
}

model Experience {
  id          String    @id @default(uuid())
  companyName String
  position    String
  startDate   DateTime?
  endDate     DateTime?
  profileId   Int
  profile     Profile   @relation(fields: [profileId], references: [id])
}


model Company{
  id             Int            @id @default(autoincrement())
  name           String
  hiringManagers HiringManager[] 
  events   Event[]   @relation("EventCompany")
}

model HiringManager {
  id            Int           @id @default(autoincrement())
  firstName     String
  lastName      String
  email         String
  company       Company
  tags          Tag[]        
}


model Tag {
  id            Int            @id @default(autoincrement())
  name          String
}


