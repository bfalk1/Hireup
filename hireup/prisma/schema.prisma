generator client {
  provider        = "prisma-client-js"
  previewFeatures = ["driverAdapters"]
}

datasource db {
  provider     = "mysql"
  url          = env("DATABASE_URL")
  relationMode = "prisma"
}

model User {
  id            Int      @id @default(autoincrement())
  clerkId       String   @unique
  firstName     String?
  lastName      String?
  email         String?  @unique
  emailVerified Boolean?
  profileId     String?
}

model Profile {
  id            Int          @id @default(autoincrement())
  clerkId       String       @unique
  firstName     String
  lastName      String
  school        String
  program       String
  year          Int
  gpa           Float
  phone         String
  country       String
  streetAddress String
  city          String
  stateProvince String
  zipPostalCode String
  about         String
  eventIds      Int[]
  experiences   Experience[]
}

model Event {
  id               Int         @id @default(autoincrement())
  title            String
  theme            String
  description      String
  shortDescription String
  startDate DateTime
  endDate DateTime
  tags             String[]
  companies        String[]
  applicants       Applicant[]
}

model Applicant {
  id          Int     @id @default(autoincrement())
  eventId     Int
  profileId
  profile Profile @relation(fields: [profileIdId], references: [id])
  submissions String?
  event       Event   @relation(fields: [eventId], references: [id])
}

model Experience {
  id          String    @id @default(uuid())
  companyName String
  position    String
  startDate   DateTime
  endDate     DateTime?
  profileId   Int
  profile     Profile   @relation(fields: [profileId], references: [id])
}
